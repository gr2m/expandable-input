{
  "name": "expandable-input",
  "description": "A jQuery plugin to use <{span|div|...} contenteditable> as expandable inputs.",
  "main": "expandable-input.js",
  "files": [
    "expandable-input.js",
    "expandable-input.css",
    "lib",
    "dist"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "bin/build.js",
    "build:demo": "webpack --context demo/ --config demo/webpack.config.js -p",
    "deploy": "npm run build:demo && npm run deploydocs",
    "predeploydocs": "bin/authorize-push.js",
    "deploydocs": "gh-pages-deploy",
    "start": "webpack-dev-server --context demo --config demo/webpack.config.js --content-base demo -d",
    "pretest": "standard",
    "test": "tap test/expandable-input-test.js",
    "presemantic-release": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gr2m/expandable-input.git"
  },
  "keywords": [
    "bootstrap",
    "input",
    "browser"
  ],
  "author": "Gregor Martynus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gr2m/expandable-input/issues"
  },
  "homepage": "https://github.com/gr2m/expandable-input",
  "devDependencies": {
    "bootstrap": "^3.3.6",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "css-loader": "^0.25.0",
    "debug": "^2.6.7",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "gh-pages-deploy": "^0.4.0",
    "jquery": "^3.0.0",
    "mocha": "^3.0.0",
    "semantic-release": "^6.2.0",
    "standard": "^8.0.0",
    "style-loader": "^0.13.0",
    "uglify-js": "^2.6.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  },
  "gh-pages-deploy": {
    "staticpath": "demo",
    "noprompt": true
  },
  "standard": {
    "ignore": [
      "demo",
      "dist"
    ]
  },
  "dependencies": {
    "selsa": "^2.0.5",
    "tap": "^10.3.2"
  }
}
